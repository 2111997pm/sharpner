<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.19.0/axios.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>
</head>

<p>

    Name:
</p>
<input type="text" id="name">
<p>
    Email
</p>
<input type="text" id="email">
<p>Phone Number</p>
<input type="number" id="number">


<button class="btn btn-primary my-3" id="get">GET</button>
<button class="btn btn-info" id="post">POST</button>
<button class="btn btn-warning" id="update">PUT/PATCH</button>
<button class="btn btn-danger" id="delete">DELETE</button>
<div id="res">

</div>

<body>
    <script>

        function getTodos() {
            axios
                .get('https://jsonplaceholder.typicode.com/todos?_limit=1')
                .then(res => showOutput(res))
                .catch(err => console.error(err));
        }


        function addTodo() {
            let name = document.getElementById('name').value;
            let email = document.getElementById('email').value;
            let number = document.getElementById('number').value;
            axios
                .post('https://jsonplaceholder.typicode.com/todos', {
                    name,
                    email,
                    number
                })
                .then(res => showOutput(res))
                .catch(err => console.error(err));
        }


        function updateTodo() {
            axios
                .patch('https://jsonplaceholder.typicode.com/todos/1', {
                    title: 'Updated Todo',
                    completed: true
                })
                .then(res => showOutput(res))
                .catch(err => console.error(err));
        }


        function removeTodo() {
            axios
                .delete('https://jsonplaceholder.typicode.com/todos/1')
                .then(res => showOutput(res))
                .catch(err => console.error(err));
        }



        function customHeaders() {

            axios
                .post(
                    'https://jsonplaceholder.typicode.com/todos',
                    {
                        title: 'New Todo',
                        completed: false
                    },

                )
                .then(res => showOutput(res))
                .catch(err => console.error(err));
        }

        function showOutput(res) {
            console.log(res.data);
            document.getElementById('res').innerHTML = `

         <div class="card mt-3">
            <div class="card-header">
          Data
             </div>
             <div class="card-body">
               <pre>${res.data.name}</pre>
               <pre> ${res.data.email}</pre>
               <pre> ${res.data.number}</pre>
              </div>
            </div>
  
         </div>
        `;
        }


        document.getElementById('get').addEventListener('click', getTodos);
        document.getElementById('post').addEventListener('click', addTodo);
        document.getElementById('update').addEventListener('click', updateTodo);
        document.getElementById('delete').addEventListener('click', removeTodo);

    </script>
</body>

</html>
